@import '../componenets/Todo/Todo.styl'

html, body
  box-sizing border-box
  margin 0
  font-family Arial, sans-serif

  h1, h2, h3, h4
    margin 0
    padding 0

  ul, li
    margin 0
    padding 0

  li
    list-style none

  .hidden
    display none
    opacity 0

  .loading-backdrop
    width: 100%;
    height: 100%;
    top: 0;
    left: 0;
