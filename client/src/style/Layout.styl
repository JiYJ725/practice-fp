.layout
  display grid
  padding: 0
  margin: 0
  height: 100vh

  grid-template-rows 75px 150px auto 75px

  grid-template-areas "header"\ "menu"\ "main"\ "footer"

  &__header
    grid-area header
    background-color #abadc2

  &__menu
    grid-area menu
    display flex
    align-items center
    justify-content center

  &__main
    grid-area main
    display flex
    justify-content center

  &__footer
    grid-area footer
    background-color brown