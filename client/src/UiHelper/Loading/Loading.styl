.loading-backdrop
  position fixed
  width 100%
  height 100%
  top 0
  left 0

  .loading
    box-sizing border-box
    position absolute
    top 50%
    left 50%
    width 50px
    height 50px
    margin-top -32px
    margin-left -32px
    border-radius 50%
    border 4px solid transparent
    border-top-color #323232
    border-bottom-color #323232
    animation spin 0.8s ease infinite

  @keyframes spin
    0%
      transform rotate(0deg)
    100%
      transform rotate(360deg)



