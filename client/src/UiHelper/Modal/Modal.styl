.modal
  position fixed
  top 0
  left 0
  right 0
  bottom 0

  &__backdrop
    background rgba(0, 0, 0, 0.2)

  &__content
    position absolute
    top 0
    left 0
    right 0
    bottom 0
    margin auto
    width 300px
    height 160px
    background #051331
    border-radius 8px
    text-align center
    z-index 9999

    &__text
      padding 0 24px
      margin-top 56px
      margin-bottom 16px
      color white

    &__buttons button
      padding 8px
      width 60px
      border 0
      background #eeeeee
      border-radius 10px
      margin 3px
      cursor pointer


    &__buttons button:hover
      filter brightness(0.5);

    &__buttons button.ok
      border 0
      color #ffffff
      background #112859