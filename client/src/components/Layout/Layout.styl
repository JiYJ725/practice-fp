isMobile(val)
  @media screen and (max-width: 768px)
    display val

html, body
  box-sizing border-box
  margin 0
  font-family Arial, sans-serif

  ul, li
    margin 0
    padding 0

  li
    list-style none

  .hidden
    display none

  .loading-backdrop
    width: 100%;
    height: 100%;
    top: 0;
    left: 0;

.layout
  display grid
  padding: 0
  margin: 0
  height: 100vh

  grid-template-rows 75px 150px auto 75px

  grid-template-areas "header"\ "menu"\ "main"\ "footer"

  &__header
    grid-area header

  &__menu
    grid-area menu

  &__main
    grid-area main
    display flex
    justify-content center

  &__footer
    grid-area footer